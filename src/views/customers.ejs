<%- include('partials/_header') %>


<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">

            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂ°</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].id %></td>
                                <td><%= data[i].name %> </td>
                                <td><%= data[i].address %> </td>
                                <td><%= data[i].phone %> </td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="badge badge-pill badge-danger">Borrar</a>
                                    <a href="/edit/<%= data[i].id %>" class="badge badge-pill badge-info">Editar</a>
                                </td>

                            </tr>

                       <% } %>
                    <% } %>
                </tbody>

            </table>

        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Nombre" class="form-control" >
                        </div>
                        <div class="form-group">
                            <input type="text" name="address" placeholder="Direccion" class="form-control" >
                        </div>
                        <div class="form-group">
                            <input type="text" name="phone" placeholder="Telefono" class="form-control" >
                        </div>
        
                        <button type="submit" class="btn btn-primary">Guardar Comprador</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include('partials/_footer') %>
